<ul class="breadcrumb">
  <li>
    <%= link_to "Home", root_url %> <span class="divider">/</span>
  </li>
  <li>
	<%= link_to "Users", users_path %> <span class="divider">/</span>
  </li>
  <li class="active">Edit <%= @user.username %></li>
</ul>

<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>

<fieldset>
  <legend>Edit <%= @user.username %></legend>
  
  <%= f.input :username %>
  <%= f.input :email %>
  <%= f.input :firstname %>
  <%= f.input :lastname %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.input :admin %>

	<div class="form-actions">
		<%= f.button :submit, :class => 'btn btn-primary' %>
		
	</div>
</fieldset>
<% end %>