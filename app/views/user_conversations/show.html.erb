<h1><%= @conversation.subject %></h1>

<div>
  <h2>People in this conversation:</h2>
  <ul>
    <% for user in @conversation.users do %>
      <li><%= link_to user.username, user %></li>
    <% end %>
  </ul>
</div>

<% for message in @conversation.messages do %>
  <div class="message"><%= time_ago_in_words(message.created_at) %> ago, <%= message.user.username %> wrote:
    <div class="message_body"><%= message.body %></div>
  </div>
<% end %>

<% if current_user == @conversation.user && !@conversation.read? %>
  <%= link_to "Mark as read", mark_as_read_conversation_path(@conversation), :method => :post %>
<% elsif current_user == @conversation.user && @conversation.read? %>
  <%= link_to "Mark as unread", mark_as_unread_conversation_path(@conversation), :method => :post %>
<% end %>
<br />

<%= form_for(@message) do |f| %>
  <div>
      <div>
        <%= f.label :body %><br />
        <%= f.text_area :body %>
      </div>

<input type="hidden" id="message_conversation_id" name="message[conversation_id]" value="<%= params[:id] %>" />

  <%= f.submit %>
<% end %>

<%= link_to "Back to conversations", conversations_path %>