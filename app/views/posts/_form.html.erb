<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content, :as => :text, :input_html => { :class => 'tinymce' } %>
	<%= f.input :topic_id, :as => :hidden, :input_html => { :value => params[:topic] }%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
