<ul class="breadcrumb">
  <li>
    <a href="/">Home</a> <span class="divider">/</span>
  </li>
  <% if params[:board] 
	@boardDisplay = Board.find_by_id(params[:board])
	%>
  <li>
    <%= link_to @boardDisplay.category.name, category_path(@boardDisplay.category.id) %> <span class="divider">/</span>
  </li>
  <li>
    <%= link_to @boardDisplay.name, board_path(@boardDisplay.id) %> <span class="divider">/</span>
  </li>
<% end %>
  <li class="active">New Post</li>
</ul>

<%= form_for @topic, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>New Topic</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>
		
			<div class="control-group">
		      <%= f.label :board_id, :class => 'control-label' %>
				      <div class="controls">
		<% if params[:board] %>
			<%= Board.find_by_id([params[:board]]).name %><input type="hidden" id="topic_board_id" name="topic[board_id]" value="<%= params[:board] %>" />
		<% else %>
				<%= f.select(:board_id, @boards.collect {|c| [ c.name, c.id] } )%>
		<% end %> 		
		      </div>
		    </div>
		
		<div class="control-group string optional">
			<label class="string optional control-label" for="post_content"> </label>
			<div class="controls">
			    <textarea name="post[content]"><%= @post.content %></textarea>
			</div>
		</div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', topics_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>